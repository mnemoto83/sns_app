<div class="search-container">
  <%= form_with url: index_topic_path, class: "form", method: :get, local: true do |form| %>
    <input class="input" type="text" name="title" placeholder="スレッドを検索" value="<%= params[:title] %>">
    <%= form.submit "検索", class: "button" %>
  <% end %>
</div>

<div class="post-list">
  <% @topics.each do |topic| %>
    <a class="post"  href="<%= edit_topic_path(topic) %>">
      <div class="header">
        <h2 class="title"><%= topic.title %></h2>
        <p class="timestamp"><%= topic.created_at.strftime("%B %d, %Y") %></p>
      </div>
    </a>
  <% end %>
</div>